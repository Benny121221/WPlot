<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Where1.WPlot.SignalFrequencyDialog"
    xmlns:local="clr-namespace:Where1.WPlot"
    Title="Sample Rate"
    Height="100"
    Width="300"
    ResizeMode="CanResizeWithGrip"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner" 
    FocusManager.FocusedElement="{Binding ElementName=leftMarginTextBox}">

	<Grid>
		<!-- Accept or Cancel -->
		<StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="*"></RowDefinition>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="auto"></ColumnDefinition>
					<ColumnDefinition Width="*"></ColumnDefinition>
				</Grid.ColumnDefinitions>
				
				<Label Grid.Row="0" Grid.Column="0">Sample Rate(Hz)</Label>
				<TextBox x:Name="frequencyTextBox" Grid.Row="0" Grid.Column="1" Text="5000" HorizontalAlignment="Stretch" VerticalAlignment="Center"></TextBox>
			</Grid>
			<Button Name="okButton" Click="okButton_Click">OK</Button>
		</StackPanel>
	</Grid >
</Window>